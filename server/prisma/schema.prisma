generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

enum Currency {
  RWF
  USD
}

enum OrderStatus {
  NEW
  CONTACTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  NONE
  PARTIAL
  FULL
}

enum PaymentMethod {
  MOBILE_MONEY
  CASH
  CARD
  BANK_TRANSFER
  OTHER
}

enum SaleStatus {
  ACTIVE
  CANCELLED
  DELIVERED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Collection {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id            String          @id @default(uuid())
  title         String
  slug          String          @unique
  description   String
  priceAmount   Decimal         @db.Decimal(12, 2)
  priceCurrency Currency
  isActive      Boolean         @default(true)
  viewCount     Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  collectionId  String
  categoryId    String
  collection    Collection      @relation(fields: [collectionId], references: [id])
  category      Category        @relation(fields: [categoryId], references: [id])
  images        ProductImage[]
  orders        Order[]
  sales         Sale[]
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  fileId    String
  altText   String?
  isVisible Boolean  @default(true)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id])
  file      File     @relation(fields: [fileId], references: [id])
}

model Order {
  id               String      @id @default(uuid())
  productId        String
  quantity         Int         @default(1)
  customerName     String
  customerPhone    String
  customerWhatsapp String
  customerEmail    String?
  customerNote     String?
  priceAmount      Decimal     @db.Decimal(12, 2)
  priceCurrency    Currency
  status           OrderStatus @default(NEW)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  product          Product     @relation(fields: [productId], references: [id])
}

model Client {
  id        String   @id @default(uuid())
  fullName  String
  phone     String
  email     String?
  whatsapp  String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Sale {
  id               String         @id @default(uuid())
  clientId         String
  productId        String
  saleDate         DateTime
  pickupDate       DateTime?
  quantity         Int
  unitPrice        Decimal        @db.Decimal(12, 2)
  currency         Currency
  totalAmount      Decimal        @db.Decimal(12, 2)
  prePaymentAmount Decimal        @db.Decimal(12, 2)
  totalPaid        Decimal        @db.Decimal(12, 2)
  remainingAmount  Decimal        @db.Decimal(12, 2)
  productionCost   Decimal?       @db.Decimal(12, 2)
  profit           Decimal        @db.Decimal(12, 2)
  paymentStatus    PaymentStatus  @default(NONE)
  paymentMethod    PaymentMethod
  status           SaleStatus     @default(ACTIVE)
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  client           Client         @relation(fields: [clientId], references: [id])
  product          Product        @relation(fields: [productId], references: [id])
  payments         Payment[]
}

model Payment {
  id             String        @id @default(uuid())
  saleId         String
  amount         Decimal       @db.Decimal(12, 2)
  currency       Currency
  paymentMethod  PaymentMethod
  paidAt         DateTime
  note           String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  sale           Sale          @relation(fields: [saleId], references: [id])
}

model AnalyticsPageview {
  id        String   @id @default(uuid())
  path      String
  referrer  String?
  userAgent String
  ipHash    String
  createdAt DateTime @default(now())
}

model File {
  id        String         @id @default(uuid())
  url       String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  productImages ProductImage[]
}

model ExpenseCategory {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expenses  Expense[]
}

model Expense {
  id          String           @id @default(uuid())
  expenseDate DateTime
  title       String
  amount      Decimal          @db.Decimal(12, 2)
  currency    Currency
  categoryId  String
  notes       String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  category    ExpenseCategory  @relation(fields: [categoryId], references: [id])
}
