generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

enum Currency {
  RWF
  USD
}

enum OrderStatus {
  NEW
  CONTACTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Collection {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id            String          @id @default(uuid())
  title         String
  slug          String          @unique
  description   String
  priceAmount   Decimal         @db.Decimal(12, 2)
  priceCurrency Currency
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  collectionId  String
  categoryId    String
  collection    Collection      @relation(fields: [collectionId], references: [id])
  category      Category        @relation(fields: [categoryId], references: [id])
  images        ProductImage[]
  orders        Order[]
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  fileId    String
  altText   String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id])
  file      File     @relation(fields: [fileId], references: [id])
}

model Order {
  id               String      @id @default(uuid())
  productId        String
  quantity         Int         @default(1)
  customerName     String
  customerPhone    String
  customerWhatsapp String
  customerEmail    String?
  customerNote     String?
  priceAmount      Decimal     @db.Decimal(12, 2)
  priceCurrency    Currency
  status           OrderStatus @default(NEW)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  product          Product     @relation(fields: [productId], references: [id])
}

model AnalyticsPageview {
  id        String   @id @default(uuid())
  path      String
  referrer  String?
  userAgent String
  ipHash    String
  createdAt DateTime @default(now())
}

model File {
  id        String         @id @default(uuid())
  url       String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  productImages ProductImage[]
}
